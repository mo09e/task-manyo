<h2>Task List</h2>
<p><%= notice %></p>
<button type="button" class="btn btn-default"><%= link_to 'New Task', new_task_path %></button>
<table>
  <thead>
    <tr>
      <th>Task name</th>
      <th>Details</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.task_name %></td>
        <td><%= task.content %></td>
        <td><%= link_to 'Show', task_path(task.id) %></td>
        <td><%= link_to "Edit", edit_task_path(task.id), data: { confirm: '本当に編集していいですか？' } %></td>
        <td><%= link_to 'Delete', task_path(task.id), method: :delete ,data: { confirm: '本当に削除していいですか？' } %>
      </tr>
    <% end %>
  </tbody>
</table>
