<div class="container" id="main_layout">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>確認画面</h3>
      <%= form_with(model: @task, local: true) do |form| %>
        <%= form.hidden_field :task_name %>
        <%= form.hidden_field :content %>
        <%= form.hidden_field :status %>
        <%= form.hidden_field :priority %>
        <%= form.hidden_field :deadline %>
        <%# <%= form.hidden_field :labels %> %>
        <p>Task name:</p>
        <p><%= @task.task_name %></p>
        <p>Details:</p>
        <p><%= @task.content %></p>
        <p>Status:</p>
        <p><%= @task.status %></p>
        <p>priority:</p>
        <p><%= @task.priority %></p>
        <p>Deadline:</p>
        <p><%= l @task.deadline %></p>
        <p>Label:</p>
        <% @task.labels.each do |label| %>
          <%= form.hidden_field :label_ids %>
        <p><%= label.name %></p>
        <% end %>
        <br>
        <%= form.submit "Post task", class: "btn btn-primary" %>
        <%= form.submit "Back", name: "back", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
