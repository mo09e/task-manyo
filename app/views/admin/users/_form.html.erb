<%= form_with(model: @task, local: true, url: choose_new_or_edit) do |form| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= @task.errors.count %> <%= t('activerecord.errors.messages.count_of_errors') %></h2>

        <ul>
          <% @task.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
  <% end %>

  <div class="task_name">
    <p><%= form.label :task_name, "Task name" %></p>
    <p><%= form.text_field :task_name %></p>
  </div>

  <div class="content">
    <p><%= form.label :content, "Details" %></p>
    <p><%= form.text_area :content %></p>
  </div>

  <div class="status">
    <p><%= form.label :status %></p>
    <p><%= form.select :status,["未着手","着手中","完了"], class: "status" %></p>
  </div>

  <div class="priority">
    <p><%= form.label :priority %></p>
    <p><%= form.select :priority,["高","中","低"], class: "priority" %></p>
  </div>

  <div class="deadline">
    <p><%= form.label :deadline, "Deadline", class: "deadline" %></p>
    <p><%= form.datetime_select :deadline, id: "task_deadline", class: "deadline" %></p>
  </div>

  <div class="actions">
    <%= form.submit "Post task", class: "btn btn-primary" %>
  </div>
<% end %>
