<br>
<div class="container" id="main_layout">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h3>Please Login</h3>
      <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
        <p>
        <%= f.label :email %>
        <%= f.email_field :email %>
        </p>
        <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
        </p>
        <%= f.submit "Log in", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
